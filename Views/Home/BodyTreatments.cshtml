@model Posting

@await Html.PartialAsync("_Navbar")
<div class="AllServicesDesc">
    <h2>All Available Body Treatments</h2>
</div>
<div class="allServices">
    <div class="d-flex flex-wrap m-2 justify-content-center">
        @foreach (Posting p in ViewBag.BodyTreatments)
        {
            <div class="serviceDiv shadow m-3">
                <div class="p-1  ">
                    <div class="d-flex justify-content-end p-2">
                        <a href="mailto: @p.ContactInfo"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18"
                            fill="currentColor" class="bi bi-envelope link-dark" viewBox="0 0 16 16">
                                <path
                                d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z" />
                            </svg></a>
                    </div>
                    <p><strong>Location:</strong> @p.Location</p>
                    <div class="d-flex gap-2">
                        <p><strong>Website:</strong></p>
                        <a href="http://@p.Website">@p.Website</a>
                    </div>
                    <div class="d-flex gap-2">
                        <p><strong>Date:</strong> @p.Date.ToString("MM/dd/yyyy")</p>
                        <p><strong>at</strong> @p.Time.ToString("h:mm tt")</p>
                    </div>
                    <p><strong>Service Description: </strong>@p.Description</p>
                </div>

            </div>
        }
    </div>
</div>
@await Html.PartialAsync("_Footer")