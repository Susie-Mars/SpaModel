@model Login
<div class="border p-3  border border-dark indexPostDiv">
    <form asp-action="LogUser" asp-controller="Home" method="post">
        <div>
            <input asp-for="UEmail" class="form-control form-control-sm border border-dark" placeholder="Email">
            <span asp-validation-for="UEmail" class="text-danger"></span>
        </div>
        <div>
            <input asp-for="UPassword" class="form-control form-control-sm mt-2 border border-dark"
                placeholder="Password">
            <span asp-validation-for="UPassword" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-end">
            <button type="submit" class="btns">Login</button>
        </div>

    </form>
</div>